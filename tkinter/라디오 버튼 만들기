import tkinter as tk
def Act1():
    lbl.config(text='Option1')
def Act2():
    lbl.config(text='Option2')
root = tk.Tk()
lbl = tk.Label(root,text="EduCodinf",underline=3)
lbl.pack()
rbar = ''
rb1 = tk.Radiobutton(root, text='Option1',variable=rbar, value='a',indicatoron=0,command=Act1)
rb1.pack()
rb2 = tk.Radiobutton(root, text='Option2',variable=rbar, value='b',indicatoron=0,command=Act2)
rb2.pack()
root.mainloop()


variable 그룹 묶는 것
